{
    "name": "mizmoz/validate",
    "version": "0.12.0",
    "description": "Validation inspired by React Prop Types",
    "homepage": "https://www.mizmoz.com/",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ian Chadwick",
            "email": "chad@mizmoz.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-intl":  ">=1.1",
        "ext-json":  ">=1.2",
        "symfony/console": "^3.2",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "Mizmoz\\Validate\\": "src/"

        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mizmoz\\Validate\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/mizmoz"],
    "scripts": {
        "post-install-cmd": [
            "php bin/mizmoz update"
        ],
        "post-update-cmd": [
            "php bin/mizmoz update"
        ]
    }
}
